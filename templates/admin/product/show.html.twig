{% extends "admin/layout/app.html.twig" %}

{% block title %}Product{% endblock %}

{% block body %}
  <h1 class="mt-4 h3 mb-3 font-weight-normal">Product</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
      <a href="{{ path('product_index') }}">Product</a>
    </li>
    <li class="breadcrumb-item active">Product</li>
  </ol>

  <table class="table">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ product.id }}</td>
      </tr>
      <tr>
        <th>Title</th>
        <td>{{ product.Title }}</td>
      </tr>
      <tr>
        <th>Price</th>
        <td>{{ product.price }} Rs</td>
      </tr>
      <tr>
        <th>Stock</th>
        <td>{{ product.stock }}</td>
      </tr>
      <tr>
        <th>Image</th>
        <td><img src="{{ asset('uploads/') ~ product.image }}" class="img-fluid w-25"></td>
      </tr>
      <tr>
        <th>Description</th>
        <td>{{ product.description | raw }}</td>
      </tr>
    </tbody>
  </table>

  {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}

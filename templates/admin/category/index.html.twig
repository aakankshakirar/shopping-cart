{% extends "admin/layout/app.html.twig" %}

{% block title %}Category index{% endblock %}

{% block body %}
  <h1 class="mt-4 h3 mb-3 font-weight-normal">Category List</h1>
  <ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
      <a href="{{ path('category_index') }}">Category</a>
    </li>
    <li class="breadcrumb-item active">Category List</li>
  </ol>

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for category in categories %}
        <tr>
          <td>{{ category.id }}</td>
          <td>{{ category.title }}</td>
          <td>

            <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-sm btn-success">Show</a>
            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-sm btn-primary">Edit</a>
            {{ include('admin/category/_delete_form.html.twig') }}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="3">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
    <a href="{{ path('category_new') }}" class="btn btn-secondary">Create new</a>
{% endblock %}
